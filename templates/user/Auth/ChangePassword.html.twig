<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="{{ asset('AuthDesign/css/style.css')}}">

</head>
<body class="img js-fullheight" style="background-image: url({{ asset('AuthDesign/images/bg.jpg') }});">
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <img src="{{ asset('AuthDesign/images/Logo.png')}}">
            </div>
        </div>


        <div class="row justify-content-center" >
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap p-0">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Changer mot de passe</button>
                    </div>
                    {{ form_end(form) }}
                    {% if passwordInv==true  %}
                        <div class="alert alert-danger" role="alert">
                            <p>les mots de passe saisis ne sont pas identiques</p>
                        </div>
                    {% endif %}
                    <div class="form-group d-md-flex">

                        <div class="w-50 text-md-right">

                            <a href="{{ path('app_login') }}" style="color: #fff">Se connecter</a>

                        </div>

                    </div>


                </div>
            </div>
        </div>

    </div>
</section>

<script src="{{ asset('AuthDesign/js/jquery.min.js')}}"></script>
<script src="{{ asset('AuthDesign/js/popper.js')}}"></script>
<script src="{{ asset('AuthDesign/js/bootstrap.min.js')}}"></script>
<script src="{{ asset('AuthDesign/js/main.js')}}"></script>

</body>