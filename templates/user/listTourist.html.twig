<h1>List of tourists</h1> 
<a href="{{ path('addTourist') }}">Add new tourist</a>
<table border="1">
    {% for c in list %}
    <tr>
    <td>{{ c.userFirstname }}</td>
    <td>{{ c.userLastname }}</td>
    <td>{{ c.userMail }}</td>
    <td>{{ c.userPhone }}</td>
    <td>{{ c.username }}</td>
    <td>{{ c.password }}</td>
    <td>{{ c.role}}</td>
    <td>{{ c.nationality}}</td>
    <td>{{ c.langue}}</td>
        
        <td><a href="{{ path('updateTourist',{'id':c.idUser}) }}">Update</a></td>
        <td><a href="{{ path('deleteTourist',{'id':c.idUser}) }}">Delete</a></td>
         
    </tr>
    {% endfor %}
</table>